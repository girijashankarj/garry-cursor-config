{
  "$schema": "./project-schema.json",
  "project": {
    "name": "my-ecommerce-api",
    "description": "E-commerce REST API with order management and payment processing",
    "version": "2.1.0",
    "repository": "https://github.com/example-org/my-ecommerce-api"
  },
  "cursor": {
    "include": {
      "patterns": ["src/**", "tests/**", "config/**", "scripts/**"],
      "priorityFiles": ["README.md", "package.json", "tsconfig.json", "src/app.ts"]
    },
    "exclude": {
      "patterns": ["node_modules/**", "dist/**", "build/**", ".git/**", "coverage/**", ".turbo/**"],
      "largeFiles": ["pnpm-lock.yaml", "*.map", "*.min.js", "*.min.css", "*.bundle.js"],
      "secrets": [".env", ".env.local", ".env.production", "*.pem", "*.key", "credentials.json"]
    },
    "tokenOptimization": {
      "maxRuleLines": 300,
      "maxSkillLines": 200,
      "maxAgentLines": 150,
      "contextLayers": {
        "immediate": 2000,
        "relevant": 5000,
        "extended": 10000,
        "reference": 20000
      }
    },
    "models": {
      "default": "claude-4-opus",
      "complex": "claude-4-opus",
      "simple": "claude-4-sonnet",
      "fast": "claude-4-sonnet"
    }
  },
  "paths": {
    "source": "src",
    "apiPath": "src/apis",
    "handlerBasePath": "src/apis/handlers/v1",
    "commonPath": "src/apis/common",
    "eventsPath": "src/events/handlers",
    "configPath": "config"
  },
  "domain": {
    "entities": ["Order", "Product", "Customer", "Payment", "Inventory"],
    "lifecycles": {
      "Order": "DRAFT → SUBMITTED → PROCESSING → SHIPPED → DELIVERED → COMPLETED",
      "Payment": "PENDING → AUTHORIZED → CAPTURED → REFUNDED"
    },
    "businessRules": [
      "Orders require valid payment before processing",
      "Inventory must be reserved before order confirmation",
      "Refunds only within 30 days of delivery"
    ]
  },
  "patterns": {
    "handlerFlowSteps": 8,
    "handlerFlow": [
      "Validate Request",
      "Validate Business",
      "Pre-Processing",
      "Operation",
      "Post-Operation",
      "Response",
      "Exit"
    ],
    "errorHandling": "centralized",
    "logging": "structured"
  },
  "techStack": {
    "language": "TypeScript",
    "runtime": "Node.js",
    "framework": "Express.js",
    "cloud": "AWS",
    "database": "PostgreSQL",
    "orm": "Prisma",
    "testing": "Jest",
    "linter": "ESLint",
    "formatter": "Prettier",
    "packageManager": "pnpm",
    "containerization": "Docker",
    "cicd": "GitHub Actions"
  },
  "testing": {
    "coverageMinimum": 90,
    "testCommand": "pnpm run test",
    "typeCheckCommand": "pnpm run type-check",
    "lintCommand": "pnpm run lint",
    "coverageCommand": "pnpm run test:coverage"
  },
  "database": {
    "softDeleteField": "active_indicator",
    "timestampFields": {
      "created": "created_at",
      "updated": "updated_at"
    },
    "naming": "snake_case"
  },
  "packages": {
    "internalPrefix": "@example-org",
    "registryUrl": "https://npm.pkg.github.com"
  },
  "fileNames": {
    "handlerEntry": "index.ts",
    "requestSchema": "request_schema.json",
    "responseSchema": "response_schema.json"
  },
  "folderNames": {
    "logic": "logic",
    "schemas": "schemas",
    "common": "common",
    "services": "services",
    "types": "types",
    "utils": "utils",
    "middleware": "middleware",
    "models": "models",
    "controllers": "controllers",
    "routes": "routes"
  },
  "conventions": {
    "branchPrefix": {
      "feature": "feature/",
      "bugfix": "fix/",
      "hotfix": "hotfix/",
      "release": "release/"
    },
    "commitFormat": "conventional",
    "prTemplate": true
  }
}
